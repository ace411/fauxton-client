{
    "name": "chemem/fauxton-client",
    "description": "A simple CouchDB interaction library.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Lochemem Bruno Michael",
            "email": "lochbm@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "jfalque/http-mock": "~1",
        "giorgiosironi/eris": "~0.10"
    },
    "require": {
        "php": ">=7.0",
        "lib-curl": "*",
        "chemem/bingo-functional": "dev-master",
        "jakub-onderka/php-console-color": "0.1",
        "react/event-loop": "~1"  
    },
    "autoload": {
        "psr-4": {
            "Chemem\\Fauxton\\": "src/"
        },
        "files": [
            "src/Http/Http.php",
            "src/Http/Actions.php",
            "src/Console/Console.php",
            "src/FileSystem/Files.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Chemem\\Fauxton\\Tests\\": "tests"
        }
    },
    "bin": ["fauxton"]
}
