{
    "name": "chemem/fauxton-client",
    "description": "A simple CouchDB interaction library.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Lochemem Bruno Michael",
            "email": "lochbm@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "jfalque/http-mock": "~1",
        "giorgiosironi/eris": "~0.10"
    },
    "require": {
        "php": ">=7.0",
        "chemem/bingo-functional": "~1",
        "composer/ca-bundle": "~1",
        "clue/buzz-react": "~2",
        "react/filesystem": "~0" 
    },
    "autoload": {
        "psr-4": {
            "Chemem\\Fauxton\\": "src/"
        },
        "files": [
            "src/Http/functions.php",
            "src/Actions/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Chemem\\Fauxton\\Tests\\": "tests"
        }
    },
    "bin": ["fauxton", "fauxton-config"],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
